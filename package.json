{
  "name": "tech-stack-2019-backend",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "build-ts": "tsc",
    "start": "npm run serve",
    "serve": "npm run build-ts && node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "echo \"Success: no test specified\" && exit 0",
    "watch": "npm run build-ts && concurrently 'npm:watch-ts' 'npm:watch-node'"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.6",
    "prettier": "^1.15.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "export CI=true && npm run build-ts && lint-staged && npm test",
      "pre-push": "export CI=test && npm run build-ts && lint-staged && npm test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint -c tslint.json"
    ]
  }
}
